<?xml version="1.0" encoding="utf-8"?>
<!-- This file, the project manifest, provides the overall configuration for your PreTeXt project. To edit the content of your document, open `source/main.ptx`. See https://pretextbook.org/doc/guide/html/processing-CLI.html#cli-project-manifest. -->

<project ptx-version="2">
  <targets>
    <target 
      name="web" 
      format="html"
      source="main.ptx" 
      publication="publication.ptx"
      xsl="dmoi-html.xsl"
    >
      <stringparams html.css.extra="external/custom-styles.css" />
    </target>

    <target 
      name="runestone" 
      format="html" 
      platform="runestone"
      source="main.ptx"
      publication="runestone.ptx"
      xsl="dmoi-html.xsl"
    >
      <stringparams html.css.extra="external/custom-styles.css" />
    </target>

    <target 
      name="print" 
      format="pdf"
      latex-engine="pdflatex"
      source="main.ptx"
      publication="print.ptx"
      xsl="dmoi-latex.xsl" 
    />
    <target 
      name="latex"
      format="latex"
      source="main.ptx"
      publication="publication.ptx"
      xsl="dmoi-latex.xsl"
    />
    <target 
      name="exer-latex"
      format="latex"
      source="main.ptx"
      publication="exercises.ptx"
      xsl="dmoi-latex.xsl"
    />
    <target 
      name="crc-print" 
      format="pdf"
      latex-engine="pdflatex"
      source="main.ptx"
      publication="crc.ptx"
      xsl="dmoi-latex-crc.xsl"
    />
    <target 
      name="subset" 
      format="pdf"
      latex-engine="pdflatex"
      source="dmoi-sample.ptx"
      publication="crc.ptx"
      xsl="dmoi-latex-crc.xsl"
    />
    <target 
      name="crc-latex"
      format="latex"
      source="main.ptx"
      publication="crc.ptx"
      xsl="dmoi-latex-crc.xsl"
    />
    <target 
      name="epub"
      format="epub"
      source="main.ptx"
      publication="publication.ptx"
      xsl="dmoi-latex.xsl"
    />
    <target name="ww-sets" format="webwork" source="main.ptx" />
  </targets>
</project>


